<div class="param_container">
  <div class="param_row">
    <div class="row">
      <div class="col-5">
        <div class="form-group has-feedback">
          <%= text_field_tag "pages[][id]", nil, class: "form-control", type:"text" , pattern:"^[_A-z0-9]{1,}$", required: true%>
          <div class="help-block with-errors">You can insert letters, numbers and "_"</div>

        </div>
      </div>
      <div class="col-5 ">
        <div class="form-group has-feedback">
          <%= text_field_tag "pages[][limit]", nil, class: "form-control", type:"number", min:"1", max:"100", required: true %>
          <div class="help-block with-errors">Must be between 1 and 100</div>
        </div>
      </div>
      <div class="form-group ">
        <button type="button" class="btn btn-success btn-add" >
          <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Add more
        </button>
      </div>
    </div>
  </div>
</div>
